{% comment %} Banner {% endcomment %}
 <section class="banner">
    <div class="banner__holder grid-x">
        <div class="banner__content">
            <div class="banner__conntent--inner">
                <div class="banner__content--title">
                    Skincare for guys that aren’t into skincare
                    <span>Try the One Minute Skincare Routine</span>
                </div>
                <div class="banner__content--btn">
                    <a href="#" class="grid-x align-center align-middle text-center">Try Today!</a>
                </div>
            </div>
            <div class="banner__content--testimonials">
                <div class="banner__content--testimonials--slider">
